/* pages/nearby_shops/nearby_shops.wxss */
page{
  font-family:MicrosoftYaHei;
}
.nodata{
  height: 750rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.nodata-img{
  width: 440rpx;
  height: 230rpx;
}
.scroll{
  height: 100%;
    display: flex;
      flex-direction: column;
}
.list{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid rgba(220,220,220,1);
  background-color: #ffffff;
}
.list-item{
  display: flex;
  flex-direction: row;
  width: 706rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.head-img image{
  height: 128rpx;
  width: 128rpx;
  border-radius: 10rpx;
}
.inf{
  display: flex;
  flex-direction: column;
  width: 562rpx;
  margin-left: 14rpx;

}
.name{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.score{
  margin-top: 15rpx;
  font-size:24rpx;
  font-weight:400;
  color:#f4ea2a;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.score-text{
  margin-left: 5rpx;
}
.adrress-distance{
  margin-left: 10rpx;
  font-size:20rpx;
  color:rgba(153,153,153,1);
}
.address{
  width: 550rpx;
  margin-top: 39rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.address-img{
  width: 24rpx;
  height: 24rpx;
}
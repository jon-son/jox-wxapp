 /* components/parts/comment/index.wxss */
 page{
   padding-top: 2px;
 }
.comment{
  background-color: #ffffff;
  border-bottom:1rpx solid rgba(220,220,220,1);
  font-family:MicrosoftYaHei;
  padding-bottom: 40rpx;
}
.comment-top{
  padding: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.comment-head-img{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.comment-name-time{
  margin-left: 21rpx;
  display: flex;
  flex-direction: column;
}
.comment-name{
  font-size:30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.comment-time{
  margin-top: 16rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.comment-rating{
  font-size: 24rpx;
  position: absolute;
  right: 24rpx;
}
.comment-center{
  margin-left: 24rpx;
  width: 700rpx;
}
.comment-mesage{
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  word-break: break-all;
  word-wrap: break-word;
}
.comment-bottom{
  margin-top: 22rpx;
  margin-left: 24rpx;
}
.comment-imgs{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.comment-imgs-item{
  width: 161rpx;
  height: 161rpx;
  margin-right: 20rpx;
}
.comment-reply{
  width:702rpx;
  margin-top: 20rpx;
  background:rgba(246,246,246,1);
  border-radius:10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.comment-reply-text{
  width:635rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-top: 22rpx;
  margin-bottom: 22rpx;
}
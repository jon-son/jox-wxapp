/* components/parts/score/index.wxss */
.score{
  width: 240rpx;
  height: 96rpx;

  background:linear-gradient(90deg,rgba(213,189,240,1) 0%,rgba(140,197,246,1) 100%);
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.left-radius{
  border-radius:0 48rpx 48rpx 0;
}
.right-radius{
  border-radius: 48rpx 0 0 48rpx;
}
.score-text{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
}
.score-value{
  font-size:34rpx;
}
.score-name{
  margin-top: 10rpx;
  font-size:22rpx;
}